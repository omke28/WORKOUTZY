<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#fff">

    <include layout="@layout/toolbar" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:orientation="vertical">



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="5dp"
            app:civ_border_color="#FFFF615D"
            android:id="@+id/ImageView"
            android:scaleType="centerCrop"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/redperson"
            android:layout_gravity="center"
            />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:clickable="true"
            app:backgroundTint="@color/workoutzy_default_red"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-35dp"
            app:fabSize="mini"
            android:id="@+id/btnPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_edit_white"
            />

        <TextView
            android:id="@+id/textViewNamn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/ditt_namn"
            android:textColor="#FF615D"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF615D"
            android:layout_marginTop="10dp">

        </View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lato_regular"
            android:text="Namn"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:background="@null"
            android:id="@+id/namn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="64dp"
            android:hint="@string/ditt_namn"
            android:textColorHint="@android:color/darker_gray"
            android:fontFamily="@font/lato_regular"
            android:inputType="textPersonName"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lato_regular"
            android:text="Mejladress"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:background="@null"
            android:id="@+id/mejl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/mejladress"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/lato_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cake"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lato_regular"
            android:text="Födelsedag"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/födelsedag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:hint="@string/fodelsedag"
            android:inputType="date"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18dp" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/save"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_edit"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textColor="#FF615D"
            android:textSize="18dp" />



        <Button
            android:textAllCaps="false"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/button_normal"
            android:drawableLeft="@drawable/ic_lock"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="Change Password"
            android:textColor="#FF615D"
            android:textSize="18dp"
            android:layout_marginTop="15dp"/>


    </LinearLayout>



</LinearLayout>